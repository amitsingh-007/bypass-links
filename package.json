{
  "name": "bypass-links",
  "version": "1.0.0",
  "description": "This is an easy-to-use Open-Source `Browser Extension` which bypasses links on various websites and lets you use the direct url for your resource. This will help you to bypass recaptchas, unnecessary timers, countdowns, ads, popups, surveys, avoid unnecessary third party installs.",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.25.0",
    "babel-eslint": "10.1.0",
    "cross-env": "7.0.3",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.7.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "lerna": "4.0.0",
    "prettier": "2.3.0",
    "pretty-quick": "3.1.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "client:analyzer": "lerna run --stream analyzer",
    "client:dev": "lerna run --stream dev",
    "client:release": "lerna run --stream release",
    "client:start": "lerna run --stream start",
    "netlify:deploy": "cross-env HOST_NAME='https://bypass-links-dev.netlify.app' npm run client:release && npm run server:deploy",
    "pretty-quick": "pretty-quick",
    "server:deploy": "lerna run --stream deploy",
    "server:serve": "lerna run --stream serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
