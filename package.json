{
  "name": "bypass-links",
  "version": "1.0.0",
  "description": "This is an easy-to-use Open-Source `Browser Extension` which bypasses links on various websites and lets you use the direct url for your resource. This will help you to bypass recaptchas, unnecessary timers, countdowns, ads, popups, surveys, avoid unnecessary third party installs.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build --parallel --stream",
    "ext:build": "lerna run build --scope=extension --stream",
    "ext:dev": "cd extension && npm run dev",
    "netlify:dev": "netlify dev",
    "netlify:deploy": "netlify deploy --prod",
    "netlify:preview": "netlify deploy",
    "pretty-quick": "pretty-quick",
    "vercel:deploy": "vercel --prod",
    "vercel:preview": "vercel",
    "web:build": "lerna run build --scope=web --stream",
    "web:dev": "cd web && npm run dev"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "3.6.1",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.8.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "kill-port": "1.6.1",
    "lerna": "4.0.0",
    "netlify-cli": "4.1.5",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
