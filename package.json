{
  "name": "bypass-links",
  "version": "1.0.0",
  "type": "module",
  "description": "An easy-to-use Open-Source `Browser Extension` which bypasses links on various websites and lets you use the direct url for your resource. This will help you to bypass recaptchas, unnecessary timers, countdowns, ads, popups, surveys, avoid unnecessary third party installs.",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:env": "vercel env pull .env",
    "e2e": "playwright test",
    "lint": "xo --no-cache --verbose",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "turbo run typecheck",
    "precommit": "lint-staged --quiet",
    "prepare": "husky",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@bypass/configs": "workspace:*",
    "@next/eslint-plugin-next": "16.1.6",
    "@playwright/test": "1.58.1",
    "@types/node": "24.10.9",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "turbo": "2.8.1",
    "typescript": "5.9.3",
    "vercel": "50.10.1",
    "xo": "1.2.3"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "overrides": {
      "eslint": "9.39.2",
      "vite": "7.3.1"
    }
  }
}
