{
  "name": "bypass-links",
  "version": "1.0.0",
  "description": "This is an easy-to-use Open-Source `Browser Extension` which bypasses links on various websites and lets you use the direct url for your resource. This will help you to bypass recaptchas, unnecessary timers, countdowns, ads, popups, surveys, avoid unnecessary third party installs.",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "babel-eslint": "10.1.0",
    "cross-env": "7.0.3",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.7.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "kill-port": "1.6.1",
    "lerna": "4.0.0",
    "netlify-cli": "3.37.16",
    "prettier": "2.3.0",
    "pretty-quick": "3.1.0",
    "vercel": "23.0.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "ext:analyzer": "lerna run --stream analyzer",
    "ext:dev": "cd extension && npm run dev",
    "ext:release": "lerna run --stream release",
    "ext:start": "lerna run --stream start",
    "dev:deploy": "cross-env HOST_NAME='https://bypass-links-dev.netlify.app' npm run ext:release && npm run server:deploy",
    "pretty-quick": "pretty-quick",
    "server:deploy": "netlify deploy --prod",
    "server:serve": "kill-port 8888 && netlify dev --inspect",
    "vercel": "vercel server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
