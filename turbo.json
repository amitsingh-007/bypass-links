{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", ".github/**"],
  "globalEnv": ["HOST_NAME"],
  "tasks": {
    "build": {
      "inputs": [".env"],
      "dependsOn": ["lint", "^build"],
      "outputs": ["build/**", ".next/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {},
    "test": {
      "outputs": []
    }
  }
}
