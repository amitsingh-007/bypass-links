{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    ".github/**"
  ],
  "globalEnv": [
    "NODE_ENV",
    "HOST_NAME",
    "GITHUB_TOKEN",
    "SERVICE_ACCOUNT_KEY",
    "FIREBASE_PRIVATE_KEY",
    "FIREBASE_BACKUP_CRON_JOB_API_KEY",
    "VERCEL_ENV",
    "AXIOM_TOKEN",
    "AXIOM_ORG_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "lint",
        "^build"
      ],
      "outputs": [
        "build/**",
        ".next/**"
      ]
    },
    "dev": {
      "cache": false
    },
    "lint": {},
    "test": {
      "outputs": []
    }
  }
}
