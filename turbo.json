{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["lint", "^build"],
      "outputs": ["build/**", ".next/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {},
    "test": {
      "outputs": []
    }
  },
  "globalDependencies": ["**/.env", ".github/**"],
  "globalEnv": [
    "NODE_ENV",
    "HOST_NAME",
    "GITHUB_TOKEN",
    "SERVICE_ACCOUNT_KEY",
    "FIREBASE_PRIVATE_KEY",
    "SITE_NAME",
    "VERCEL_ENV",
    "AXIOM_TOKEN",
    "AXIOM_ORG_ID"
  ]
}
