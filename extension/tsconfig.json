{
  "extends": "../shared/config/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    // Refer: https://github.com/microsoft/TypeScript/issues/26859#issuecomment-695806452
    "paths": {
      "GlobalHelpers/*": ["./src/helpers/*"],
      "GlobalApis/*": ["src/BackgroundScript/apis/*"],
      "GlobalComponents/*": ["./src/components/*"],
      "GlobalConstants": ["./src/constants"],
      "GlobalConstants/*": ["./src/constants/*"],
      "GlobalContainers/*": ["./src/containers/*"],
      "GlobalInterfaces/*": ["./src/interfaces/*"],
      "GlobalStore/*": ["./src/store/*"],
      "GlobalStyles/*": ["./src/scss/*"],
      "GlobalUtils/*": ["./src/utils/*"],
      "SrcPath/*": ["./src/*"]
    }
  },
  "include": ["@types", "src", "webpack.config.ts"],
  "exclude": ["build", "**/node_modules"],
  //Required for webpack config in typescript
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
