{
  "extends": [
    "eslint:recommended",
    "react-app",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "webextensions": true,
    "serviceworker": true,
    "node": true
  },
  "globals": {
    "chrome": false,
    "__EXT_VERSION__": false,
    "__RELEASE_DATE__": false,
    "__PROD__": false,
    "HOST_NAME": false
  },
  "rules": {
    "no-undef": "error",
    "eol-last": ["error", "always"],
    "no-trailing-spaces": "error"
  }
}
