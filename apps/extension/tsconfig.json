{
  "extends": "@bypass/configs/tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable", "webworker"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@background/*": ["./src/entrypoints/background/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@popup/*": ["./src/entrypoints/popup/*"],
      "@store/*": ["./src/store/*"]
    }
  },
  "include": [
    "@types",
    "scripts",
    "src",
    "tests",
    "wxt.config.ts",
    ".wxt/wxt.d.ts",
    ".wxt/types/*.d.ts"
  ],
  "exclude": [".output", ".wxt/tsconfig.json", "node_modules", ".turbo"]
}
