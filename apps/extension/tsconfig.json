{
  "extends": "@bypass/configs/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    // Refer: https://github.com/microsoft/TypeScript/issues/26859#issuecomment-695806452
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@store/*": ["./src/store/*"]
    }
  },
  "include": ["@types", "src"],
  "exclude": ["build", "**/node_modules"],
  //Required for webpack config in typescript
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
